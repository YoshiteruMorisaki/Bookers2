<div class="container mt-4">
  <div class="row">
    <div class="col-md-3">
      <%= render "shared/sidebar", user: @user, book: @book, context: "books_index" %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table align-middle">
        <thead>
          <tr>
            <th style="width: 120px;"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |b| %>
            <tr>
              <td>
                <div class="d-flex align-items-center justify-content-center">
                  <%= link_to user_path(b.user) do %>
                    <%= profile_image_tag(b.user, size: 60) %>
                  <% end %>
                </div>
              </td>
              <td><%= link_to b.title, book_path(b) %></td>
              <td><%= b.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
