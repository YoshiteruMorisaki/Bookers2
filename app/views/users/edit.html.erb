<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6">
    <h2 class="mb-4 fw-bold">User info</h2>

    <%= form_with model: @user, local: true do |f| %>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :profile_image, "Image", class: "form-label" %>
        <%= f.file_field :profile_image, class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :introduction, "Introduction", class: "form-label" %>
        <%= f.text_area :introduction, rows: 5, class: "form-control" %>
      </div>

      <%= f.submit "Update User", class: "btn btn-secondary px-4" %>
    <% end %>
  </div>
</div>
