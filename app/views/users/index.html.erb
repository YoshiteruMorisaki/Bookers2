<div class="container mt-4">
  <div class="row g-4">
    <div class="col-md-4">
      <%= render "shared/sidebar", user: @user, book: @book, context: "users_index" %>
    </div>

    <div class="col-md-8">
      <h2>Users</h2>

      <table class="table align-middle">
        <thead>
          <tr>
            <th style="width: 140px;">image</th>
            <th>name</th>
            <th style="width: 120px;"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td><%= profile_image_tag(u, size: 60) %></td>
              <td><%= u.name %></td>
              <td><%= link_to "Show", user_path(u) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
