<h2>User info</h2>

<div class="border bg-light d-flex align-items-center justify-content-center"
                    style="width: 100px; height: 100px;">
                  <%= profile_image_tag(user, size: 100) %>
                </div>

<table class="table">
  <tbody>
    <tr>
      <th style="width: 35%;">name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

<div class="mb-4">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary w-100" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2>New book</h2>

<% if book.errors.any? %>
  <div class="alert alert-danger">
    <ul class="mb-0">
      <% book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: book, url: books_path, local: true do |f| %>
  <%= hidden_field_tag :context, context %>

  <div class="mb-3">
    <%= f.label :title, "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :body, "Opinion", class: "form-label" %>
    <%= f.text_area :body, class: "form-control", rows: 4 %>
  </div>

  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>
