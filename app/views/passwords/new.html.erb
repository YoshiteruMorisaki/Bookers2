<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h1 class="fw-bold mb-3">Forgot your password?</h1>
        <% if @error_message.present? %>
          <div id="error_explanation">
            <h2>1 error prohibited this user from being saved:</h2>
              <ul>
                <li><%= @error_message %></li>
              </ul>
          </div>
        <% end %>

      <%= form_with url: passwords_path, method: :post, local: true do %>
        <div class="mb-3">
          <%= label_tag :email_address, "Email", class: "form-label" %>
          <%= email_field_tag :email_address, params[:email_address], class: "form-control", autofocus: true %>
        </div>

        <%= submit_tag "Send me reset password instructions", class: "btn btn-outline-secondary" %>
      <% end %>

      <div class="mt-3">
        <%= link_to "Log in", new_session_path %><br>
        <%= link_to "Sign up", new_user_path %>
      </div>
    </div>
  </div>
</div>
